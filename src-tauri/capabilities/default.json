{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "log:default",
    "store:default",
    "dialog:default",
    "upload:default",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-image",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**/*" }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "**/*" }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [{ "url": "http://127.0.0.1:8601" }, { "url": "http://192.168.18.229:8601" }, { "url": "https://*.17ch.cn" }]
    }
  ]
}