{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "clipboard-manager:default",
    "shell:default",
    "log:default",
    "store:default",
    "fs:default",
    "os:default",
    {
      "identifier": "fs:write-all",
      "allow": [
        { "path": "$DESKTOP" },
        { "path": "$DESKTOP/**" }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$DESKTOP/**" }
      ]
    }
  ]
}